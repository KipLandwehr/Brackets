{% extends 'base.html.twig' %}

{% block body %}
    <h1>Matches list</h1>

    <table>
        <thead>
            <tr>
                <th>Redscore</th>
                <th>Bluescore</th>
                <th>Matchstarttime</th>
                <th>Matchendtime</th>
                <th>Currentround</th>
                <th>Remainingseconds</th>
                <th>Roundinprogress</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for match in matches %}
            <tr>
                <td><a href="{{ path('matches_show', { 'id': match.id }) }}">{{ match.redscore }}</a></td>
                <td>{{ match.bluescore }}</td>
                <td>{% if match.matchstarttime %}{{ match.matchstarttime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if match.matchendtime %}{{ match.matchendtime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ match.currentround }}</td>
                <td>{{ match.remainingseconds }}</td>
                <td>{% if match.roundinprogress %}Yes{% else %}No{% endif %}</td>
                <td>{{ match.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('matches_show', { 'id': match.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('matches_edit', { 'id': match.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('matches_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
